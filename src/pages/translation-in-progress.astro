---
import BaseLayout from '../layouts/BaseLayout.astro'
import { i18n } from '../i18n/translations'

const lang = 'en'
---

<BaseLayout title="Translation in Progress | Interledger Foundation" description="This blog post is currently being translated.">
  <div class="translation-in-progress">
    <div class="content">
      <h1>Translation in Progress</h1>
      <p>We're currently working on translating this blog post. Please check back later.</p>
      <a href="/blog" class="button">Back to Blog</a>
    </div>
  </div>
</BaseLayout>

<style>
  .translation-in-progress {
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 24px;
  }

  .content {
    max-width: 600px;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  p {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    margin-bottom: 2rem;
  }

  .button {
    display: inline-block;
    padding: 12px 24px;
    background-color: var(--color-primary);
    color: white;
    text-decoration: none;
    border-radius: var(--border-radius);
    font-weight: 500;
    transition: background-color 0.2s ease;
  }

  .button:hover {
    background-color: var(--color-primary-hover);
  }
</style>
