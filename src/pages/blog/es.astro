---
import { getCollection } from 'astro:content'
import BaseLayout from '../../layouts/BaseLayout.astro'
import LocaleFilter from '../../components/blog/LocaleFilter.astro'
import { createExcerpt } from '../../utils/create-excerpt'

// Only return posts with `draft: true` in the frontmatter
const esEntries = await getCollection('blog', ({ data }) => {
  return data.lang === 'es'
})
---

<BaseLayout
  title="Blog de Ingeniería"
  description="Hear stories and experiences from the team who is working on making Interledger, the interoperable global payments network, a reality."
  ogImageUrl={new URL('/img/blog/og-image.png', Astro.site).href}
>
  <main>
    <div class="content-wrapper">
      <ol
        class="breadcrumbs"
        itemscope
        itemtype="https://schema.org/BreadcrumbList"
      >
        <li
          itemprop="itemListElement"
          itemscope
          itemtype="https://schema.org/ListItem"
        >
          <a itemprop="item" href="/" data-umami-event="Devs breadcrumb - Home">
            <span itemprop="name">Developers Portal</span></a
          >
          <meta itemprop="position" content="1" />
        </li>
        <li
          itemprop="itemListElement"
          itemscope
          itemtype="https://schema.org/ListItem"
        >
          <a
            itemprop="item"
            href="/blog"
            data-umami-event="Devs breadcrumb - Blog"
          >
            <span itemprop="name">Engineering Blog</span></a
          >
          <meta itemprop="position" content="2" />
        </li>
      </ol>
      <header>
        <h1>Blog de Ingeniería</h1>
        <LocaleFilter />
      </header>
      <ol class="postlist">
        {
          esEntries.map((blogPostEntry) => {
            const excerpt = `${createExcerpt(blogPostEntry.body).substring(0, 300)}...`
            return (
              <li class="postlist-item">
                <div class="postlist-image">
                  {blogPostEntry.data.image && (
                    <img
                      loading="lazy"
                      src={blogPostEntry.data.image}
                      width="250"
                      height="250"
                      alt={blogPostEntry.data.title}
                    />
                  )}
                </div>
                <div class="postlist-content">
                  <h2>
                    <a
                      href={`/blog/${blogPostEntry.id}`}
                      class="postlist-link"
                    >
                      {blogPostEntry.data.title}
                    </a>
                  </h2>
                  <time
                    class="postlist-date"
                    datetime={blogPostEntry.data.date.toISOString()}
                  >
                    {blogPostEntry.data.date.toDateString().substring(4)}
                  </time>
                  <p>
                    {blogPostEntry.data.description
                      ? blogPostEntry.data.description
                      : excerpt}
                  </p>
                  <a
                    href={`/blog/${blogPostEntry.id}`}
                    class="postlist-readmore"
                  >
                    Leer más →
                  </a>
                </div>
              </li>
            )
          })
        }
      </ol>
    </div>
  </main>
</BaseLayout>

<style>
  main {
    padding-block-start: var(--space-m);
    padding-block-end: var(--space-xl);
  }

  .breadcrumbs {
    list-style: none;
    display: flex;
    padding-inline-start: 0;
    font-size: var(--step--1);
    font-weight: 700;
    padding-block-start: var(--space-l);
  }

  .breadcrumbs a {
    color: var(--color-primary);
    text-decoration: none;
  }

  .breadcrumbs li:not(:first-child)::before {
    content: '>';
    display: inline-flex;
    margin-inline-start: var(--space-3xs);
  }

  ol {
    padding: 0;
  }

  header {
    padding-block-start: var(--space-s);
    padding-block-end: var(--space-m);
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-xs);
  }

  @media screen and (max-width: 730px) {
    header {
      flex-direction: column;
      align-items: start;
    }
  }

  .post-metadata,
  .links-nextprev,
  .postlist {
    list-style: none;
  }

  .postlist-item {
    display: flex;
    flex-direction: row;
    gap: var(--space-m);
    margin-bottom: var(--space-m);
    padding: var(--space-m);
    background-color: rgba(255, 255, 255, 0.5);
    border-radius: var(--border-radius);
    box-shadow: var(--box-shadow);
  }

  @media screen and (max-width: 768px) {
    .postlist-item {
      flex-direction: column;
    }
  }

  .postlist-image {
    flex-shrink: 0;
  }

  .postlist-image img {
    width: 250px;
    height: 250px;
    object-fit: cover;
    border-radius: var(--border-radius);
  }

  @media screen and (max-width: 768px) {
    .postlist-image img {
      width: 100%;
      height: auto;
    }
  }

  .postlist-content {
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .postlist-content h2 {
    margin: 0;
    margin-bottom: var(--space-3xs);
  }

  .postlist-date {
    font-size: var(--step--1);
    margin-bottom: var(--space-2xs);
    display: block;
  }

  .postlist-link {
    color: var(--color-primary);
    font-weight: 600;
    text-decoration: none;
    transition: color 300ms ease-in-out;
  }

  .postlist-link:hover {
    text-decoration: underline;
  }

  .postlist-content p {
    margin-bottom: var(--space-2xs);
    flex-grow: 1;
  }

  .postlist-readmore {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 600;
    align-self: flex-start;
    transition: opacity 300ms ease-in-out;
  }

  .postlist-readmore:hover {
    opacity: 0.8;
  }
</style>
