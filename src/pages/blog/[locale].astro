---
import { getCollection } from 'astro:content'
import type { GetStaticPaths } from 'astro'
import BaseLayout from '../../layouts/BaseLayout.astro'
import { createExcerpt } from '../../utils/create-excerpt'

export const prerender = true

export const getStaticPaths: GetStaticPaths = async () => {
  const blogEntries = await getCollection('blog')
  
  // Get unique locales from blog posts (excluding undefined/null)
  const locales = [...new Set(
    blogEntries
      .map(entry => entry.data.lang)
      .filter((lang): lang is string => Boolean(lang))
  )]
  
  return locales.map(locale => ({
    params: { locale },
    props: { locale }
  }))
}

const { locale } = Astro.props

// Get blog entries filtered by locale
const localeEntries = (await getCollection('blog', ({ data }) => {
  return data.lang === locale
})).sort((a, b) => b.data.date.getTime() - a.data.date.getTime())

// Locale display names for page title
const localeNames: Record<string, string> = {
  es: 'Español',
  fr: 'Français',
  de: 'Deutsch',
  zh: '中文'
}

const localeName = localeNames[locale] || locale.toUpperCase()
---

<BaseLayout
  title={`Engineering Blog (${localeName})`}
  description="Hear stories and experiences from the team who is working on making Interledger, the interoperable global payments network, a reality."
  ogImageUrl={new URL('/img/blog/og-image.png', Astro.site).href}
>
  <main>
    <div class="content-wrapper">
      <ol
        class="breadcrumbs"
        itemscope
        itemtype="https://schema.org/BreadcrumbList"
      >
        <li
          itemprop="itemListElement"
          itemscope
          itemtype="https://schema.org/ListItem"
        >
          <a
            itemprop="item"
            href="/"
            data-umami-event="Devs breadcrumb - Home"
          >
            <span itemprop="name">Developers Portal</span></a
          >
          <meta itemprop="position" content="1" />
        </li>
        <li
          itemprop="itemListElement"
          itemscope
          itemtype="https://schema.org/ListItem"
        >
          <a
            itemprop="item"
            href="/blog"
            data-umami-event="Devs breadcrumb - Blog"
          >
            <span itemprop="name">Engineering Blog</span></a
          >
          <meta itemprop="position" content="2" />
        </li>
      </ol>
      <header>
        <h1>Engineering Blog <span class="locale-badge">{locale.toUpperCase()}</span></h1>
        <a class="cta__blog" href="/blog">
          <p>View all posts</p>
          <img
            src="/img/ernie-purple.svg"
            alt="Ernie holding an envelope"
            aria-hidden="true"
          />
        </a>
      </header>
      {localeEntries.length === 0 ? (
        <p class="no-posts">No posts available in {localeName} yet.</p>
      ) : (
        <ol class="postlist">
          {localeEntries.map((blogPostEntry) => {
            const excerpt = `${createExcerpt(blogPostEntry.body).substring(0, 300)}...`
            return (
              <li class="postlist-item">
                <div class="postlist-image">
                  {blogPostEntry.data.image && (
                    <img
                      loading="lazy"
                      src={blogPostEntry.data.image}
                      width="250"
                      height="250"
                      alt={blogPostEntry.data.title}
                    />
                  )}
                </div>
                <div class="postlist-content">
                  <h2>
                    <a
                      href={`/blog/${blogPostEntry.id}`}
                      class="postlist-link"
                    >
                      {blogPostEntry.data.title}
                    </a>
                  </h2>
                  <time
                    class="postlist-date"
                    datetime={blogPostEntry.data.date.toISOString()}
                  >
                    {blogPostEntry.data.date.toDateString().substring(4)}
                  </time>
                  <p>
                    {blogPostEntry.data.description
                      ? blogPostEntry.data.description
                      : excerpt}
                  </p>
                  <a href={`/blog/${blogPostEntry.id}`} class="postlist-readmore">
                    Read more →
                  </a>
                </div>
              </li>
            )
          })}
        </ol>
      )}
    </div>
  </main>
</BaseLayout>

<style>
  main {
    padding-block-start: var(--space-m);
    padding-block-end: var(--space-xl);
  }

  .breadcrumbs {
    list-style: none;
    display: flex;
    padding-inline-start: 0;
    font-size: var(--step--1);
    font-weight: 700;
    padding-block-start: var(--space-l);
  }

  .breadcrumbs a {
    color: var(--color-primary);
    text-decoration: none;
  }

  .breadcrumbs li:not(:first-child)::before {
    content: '>';
    display: inline-flex;
    margin-inline-start: var(--space-3xs);
  }

  ol {
    padding: 0;
  }

  header {
    padding-block-start: var(--space-s);
    padding-block-end: var(--space-m);
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-xs);
  }

  header h1 {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
  }

  .locale-badge {
    border: 1.5px solid;
    padding-inline: 8px;
    border-radius: var(--border-radius);
    font-size: var(--step-0);
    background-color: white;
  }

  @media screen and (max-width: 730px) {
    header {
      flex-direction: column;
      align-items: start;
    }
  }

  .cta__blog {
    display: flex;
    align-items: center;
    gap: var(--space-s);
    padding: var(--space-3xs) var(--space-2xs);
    background-color: white;
    box-shadow: var(--box-shadow);
    border-radius: var(--border-radius);
    font-size: var(--step--1);
    background-image: var(--color-white);
    text-decoration: none;
  }

  .cta__blog p {
    flex: none;
    text-decoration-color: transparent;
    text-decoration-line: underline;
    transition: text-decoration-color 300ms ease-in-out;
  }

  .cta__blog:hover {
    color: inherit;
  }

  .cta__blog:hover p {
    color: currentColor;
    text-decoration-color: currentColor;
  }

  .cta__blog img {
    width: 4em;
  }

  .post-metadata,
  .links-nextprev,
  .postlist {
    list-style: none;
  }

  .postlist-item {
    display: flex;
    flex-direction: row;
    gap: var(--space-m);
    margin-bottom: var(--space-m);
    padding: var(--space-m);
    background-color: rgba(255, 255, 255, 0.5);
    border-radius: var(--border-radius);
    box-shadow: var(--box-shadow);
  }

  @media screen and (max-width: 768px) {
    .postlist-item {
      flex-direction: column;
    }
  }

  .postlist-image {
    flex-shrink: 0;
  }

  .postlist-image img {
    width: 250px;
    height: 250px;
    object-fit: cover;
    border-radius: var(--border-radius);
  }

  @media screen and (max-width: 768px) {
    .postlist-image img {
      width: 100%;
      height: auto;
    }
  }

  .postlist-content {
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .postlist-content h2 {
    margin: 0;
    margin-bottom: var(--space-3xs);
  }

  .postlist-date {
    font-size: var(--step--1);
    margin-bottom: var(--space-2xs);
    display: block;
  }

  .postlist-link {
    color: var(--color-primary);
    font-weight: 600;
    text-decoration: none;
    transition: color 300ms ease-in-out;
  }

  .postlist-link:hover {
    text-decoration: underline;
  }

  .postlist-content p {
    margin-bottom: var(--space-2xs);
    flex-grow: 1;
  }

  .postlist-readmore {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 600;
    align-self: flex-start;
    transition: opacity 300ms ease-in-out;
  }

  .postlist-readmore:hover {
    opacity: 0.8;
  }

  .no-posts {
    text-align: center;
    padding: var(--space-xl);
    color: var(--color-text-muted);
  }
</style>
