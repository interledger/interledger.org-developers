<style>
  .site-footer {
    padding: var(--space-m) 0;
    margin-left: var(--space-m);
    margin-right: var(--space-m);
    text-align: center;
    border-block-start: 1px solid var(--color-primary-fallback);
    border-block-start: 1px solid var(--color-primary);
  }

  .site-footer ul {
    display: flex;
    list-style: none;
    justify-content: center;
    padding: 0;
  }

  .site-footer a {
    text-decoration: none;
    color: var(--color-primary-fallback);
    color: var(--color-primary);
  }

  .site-footer a:hover {
    text-decoration: underline;
  }

  .social-links {
    gap: var(--space-s);
    margin-bottom: var(--space-s);
  }

  .social-links svg {
    height: 2em;
    width: 2em;
  }

  .site-footer p {
    margin-bottom: var(--space-s);
  }

  .footer-links a {
    padding: 0 var(--space-s);
    white-space:nowrap;
  }

  @media screen and (min-width: 440px) {
    .footer-links li:not(:first-of-type)::before {
      content: "|";
      display: inline;
    }
  }

  @media screen and (max-width: 439px) {
    ul.footer-links {
      display: initial;
    }

    .footer-links li {
      margin-bottom: var(--space-2xs);
    }
  }
</style>
